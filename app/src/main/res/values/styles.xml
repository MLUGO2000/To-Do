<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="textTitle">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_tiles</item>
    </style>

    <style name="textDesc">
        <item name="android:textColor">@color/white_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_subtitles</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/button_design</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>



</resources>